<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<installation version="1.0">
	<guiprefs width="640" height="550" resizable="no">
		<laf name="looks">
			<os family="windows" />
			<param name="variant" value="extwin" />
		</laf>
		<laf name="metouia">
			<os family="unix" />
		</laf>
	</guiprefs>
	
	<native type="izpack" name="ShellLink.dll">
		<os family="windows" />
	</native> 

	<locale>
  		<langpack iso3="eng" /> 
  		<langpack iso3="deu" /> 
  	</locale>
  	
	<resources>
		<res id="LicencePanel.licence" src="License.txt"></res>
		<res id="InfoPanel.info" src="Readme.txt"></res>
		<res id="Installer.image.0" src="helloPanel.png" />
		<res id="Installer.image.1" src="infoPanel.png" />
		<res id="Installer.image.2" src="licencePanel.png" />
		<res id="Installer.image.3" src="packsPanel.png" />
		<res id="Installer.image.4" src="targetPanel.png" />
		<res id="Installer.image.5" src="installPanel.png" />
		<res id="Installer.image.6" src="shortcutPanel.png" />
		<res id="Installer.image.7" src="finishPanel.png" />
		<res id="installer.langsel.img" src="woped-logo.jpg" />
		<res id="Unix_shortcutSpec.xml" src="shortcut-linux.xml" />
		<res id="shortcutSpec.xml" src="shortcut-win.xml" />
	</resources>
	
	<info>
		<appname>WoPeD</appname>
		<appversion>@wopedversion@</appversion>
		<authors>
			<author name="Alexander Assall, Mario Beiser, Jenny Braun," email=""></author>
			<author name="Christian Czech, Sascha Dörner, Andreas Eckleder," email=""></author>
			<author name="Christina Eckleder, Manuel Fladt, Christian Flender," email=""></author>
			<author name="Steffen Gegenheimer, Benjamin Geiger, Tilmann Glaser," email=""></author>
			<author name="Johannes Händel, Bernhard von Hasseln, Tobias Heinemann," email=""></author>
			<author name="Benjamin Jörger, Mona Ketterer, Kristian Kindler," email=""></author>
			<author name="Konstantin Krüger, Esther Landes, Simon Landes," email=""></author>
			<author name="Ralf Lehmann, Linda Linsenbolz, Samuel Mellert," email=""></author>
			<author name="Mathias Mruzek, Alexis Nagy, Markus Nöltner," email=""></author>
			<author name="Stefanie Obergfell, Sebastian Orts, Katharina Pfeifer," email=""></author>
			<author name="Thomas Pohl, Valentino Pola, Lavina Posler," email=""></author>
			<author name="Tobias Rehnig, Karsten Ripsam, Rolf Schäuble," email=""></author>
			<author name="Frank Schüler, Anthony Soprano" email=""></author>
			<author name="Responsible: Thomas Freytag" email="freytag@woped.org"></author>
		</authors>
		<url>http://www.woped.org</url>
	</info>

	<locale>
		<langpack iso3="eng"></langpack>
	</locale>
	
	<panels>
		<panel classname="HelloPanel"></panel>
		<panel classname="InfoPanel"></panel>
		<panel classname="LicencePanel"></panel>
		<panel classname="PacksPanel"></panel>
		<panel classname="TargetPanel"></panel>
		<panel classname="InstallPanel"></panel>
		<panel classname="ShortcutPanel"></panel>
		<panel classname="SimpleFinishPanel"></panel>
	</panels>
	
	<packs>
		<pack name="Executable" required="yes">
			<description>Executable files</description>
			<file src="Readme.txt" targetdir="$INSTALL_PATH">				
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="License.txt" targetdir="$INSTALL_PATH">			
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="Changelog.txt" targetdir="$INSTALL_PATH">			
				<os family="unix" />
				<os family="windows" />
			</file>

			<file src="WoPeD.exe" targetdir="$INSTALL_PATH">
				<os family="windows" />
			</file>

			<file src="WoPeD" targetdir="$INSTALL_PATH">
				<os family="unix" />
			</file>
			<file src="woped-icon16.png" targetdir="$INSTALL_PATH">
				<os family="unix" />
			</file>
			<executable src="WoPeD" targetfile="$INSTALL_PATH/WoPeD" stage="never" 
						keep="true" workingDirectory="$INSTALL_PATH">
				<os family="unix" />
			</executable>
			<file src="WoPeD.jar" targetdir="$INSTALL_PATH">
				<os family="unix" />
			</file>

			<file src="WoPeD-classes-@wopedversion@.jar" targetdir="$INSTALL_PATH">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="lib/jgraph-@jgraphversion@.jar" targetdir="$INSTALL_PATH/lib">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="lib/log4j-@log4jversion@.jar" targetdir="$INSTALL_PATH/lib">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="lib/flanagan-@flanaganversion@.jar" targetdir="$INSTALL_PATH/lib">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="lib/jcalendar-@jcalendarversion@.jar" targetdir="$INSTALL_PATH/lib">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="lib/jsr173_@jsrversion@.jar" targetdir="$INSTALL_PATH/lib">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="lib/ruddi-@ruddiversion@.jar" targetdir="$INSTALL_PATH/lib">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="lib/stax-@staxversion@.jar" targetdir="$INSTALL_PATH/lib">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="lib/bpelBeans.jar" targetdir="$INSTALL_PATH/lib">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="lib/pnmlBeans.jar" targetdir="$INSTALL_PATH/lib">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="lib/pnmlBeans_old.jar" targetdir="$INSTALL_PATH/lib">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="lib/xbean.jar" targetdir="$INSTALL_PATH/lib">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="lib/confBeans.jar" targetdir="$INSTALL_PATH/lib">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="nets/Example.pnml" targetdir="$INSTALL_PATH/nets">
				<os family="unix" />
				<os family="windows" />
			</file>
			<file src="WofJava.dll" targetdir="$INSTALL_PATH">
				<os family="windows" />
			</file>
		</pack>
		
		<pack name="HTML Manual" required="no">
			<description>Separate HTML Manual files</description>
			<file src="doc/html" targetdir="$INSTALL_PATH/doc">
				<os family="unix" />
				<os family="windows" />
			</file>
		</pack>

		<pack name="PDF Documentation" required="no">
			<description>Additional manual and user doc files</description>
			<file src="doc/pdf" targetdir="$INSTALL_PATH/doc">
				<os family="unix" />
				<os family="windows" />
			</file>			
		</pack>
	</packs>
</installation>