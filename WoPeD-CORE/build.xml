<project name="WoPeD CORE MINIMAL" default="makejar">
	
	<property name="JGRAPHVERSION" value="5.4.4" />
	<property name="LOG4JVERSION" value="1.2.8" />
	<property name="COREVERSION" value="0.9.0" />
	<property name="BUILD" value="SNAPSHOT" />
		
	<target name="compile">
			<javac srcdir="src/org" destdir="bin" compiler="extJavac">
				<classpath>
					<pathelement path="../CommonLibs/lib/jgraph-${JGRAPHVERSION}.jar" />
					<pathelement path="../CommonLibs/lib/log4j-${LOG4JVERSION}.jar" />
				</classpath>
			</javac>
		</target>
	<target name="makejar" depends="compile">
		<jar destfile="lib/woped-core-${COREVERSION}-${BUILD}.jar">
			<fileset dir="bin" />
		</jar>
	</target>

</project>