<project default="makejar" name="GUI">

	<tstamp />

	<property name="JGRAPHVERSION" value="5.4.4" />
	<property name="LOG4JVERSION" value="1.2.8" />
	<property name="GUIVERSION" value="1.0.0" />
	<property name="COREVERSION" value="1.0.0" />
	<property name="COREVERSION" value="1.0.0" />
	<property name="EDITORVERSION" value="1.0.0" />
	<property name="FILEINTERFACEVERSION" value="1.0.0" />
	<property name="CONFIGURATIONVERSION" value="1.0.0" />
	<property name="SNAPSHOT" value="-beta" />

	<filter token="wopedversion" value="${GUIVERSION}" />
	<filter token="jgraphversion" value="${JGRAPHVERSION}" />
	<filter token="log4jversion" value="${LOG4JVERSION}" />
	<filter token="builtstamp" value="${DSTAMP}" />

	<target name="compile">
		<javac srcdir="src" destdir="bin" compiler="extJavac">
			<classpath>
				<pathelement path="../WoPeD-CORE/lib/woped-core-${COREVERSION}.jar" />
				<pathelement path="../WoPeD-Editor/lib/woped-editor-${EDITORVERSION}.jar" />
				<pathelement path="../WoPeD-FileInterface/lib/woped-fileinterface-${FILEINTERFACEVERSION}" />
				<pathelement path="../WoPeD-XMLConfiguration/lib/woped-configuration-${CONFIGURATIONVERSION}" />
				<pathelement path="../CommonLibs/lib/log4j-${LOG4JVERSION}.jar" />
				<pathelement path="../CommonLibs/lib/jgraph-${JGRAPHVERSION}.jar" />
				<pathelement path="../CommonLibs/lib/xbean.jar.jar" />
				<pathelement path="lib/pnmlBeans.jar" />
				<pathelement path="lib/pnmlBeans_old.jar" />
				<pathelement path="lib/confBeans.jar" />
			</classpath>
		</javac>
	</target>
	
	<target name="makejar" depends="compile">
		<jar destfile="lib/woped-gui-${GUIVERSION}${SNAPSHOT}.jar">
			<fileset dir="bin" />
			<fileset dir="doc" />
		</jar>
	</target>
	
	<target name="clean">
		<delete dir="bin/org" />
	</target>

</project>
