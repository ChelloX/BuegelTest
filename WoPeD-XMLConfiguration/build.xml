<project default="makejar" name="CONFIGURATION">

	<property file="../CommonLibs/build.properties" />
	
	<filter token="log4jversion" value="${LOG4JVERSION}" />

	<target name="compile" depends="generateConfigXMLBeans">
		<javac srcdir="src" destdir="bin" compiler="extJavac">
			<classpath>
				<pathelement path="../WoPeD-CORE/lib/woped-core-${COREVERSION}${SNAPSHOT}.jar" />
				<pathelement path="../WoPeD-Editor/lib/woped-editor-${EDITORVERSION}${SNAPSHOT}.jar" />
				<pathelement path="../WoPeD-Translations/lib/woped-translations-${TRANSLATIONVERSION}${SNAPSHOT}.jar" />
				<pathelement path="../CommonLibs/lib/log4j-${LOG4JVERSION}.jar" />
				<pathelement path="../CommonLibs/lib/xbean.jar" />
				<pathelement path="lib/confBeans.jar" />
			</classpath>
		</javac>
		<copy todir="bin/org/woped/config" file="src/org/woped/config/WoPeDconfig.xml"/>
	</target>
	
	<target name="makejar" depends="compile">
		<delete>
			<fileset file="lib/woped*.jar" />
		</delete>
		<jar destfile="lib/woped-configuration-${CONFIGURATIONVERSION}${SNAPSHOT}.jar">
			<fileset dir="bin" />
		</jar>
	</target>

	<target name="cleanup" depends="makejar">
		<delete file="lib/confBeans.jar" />
	</target>

	<taskdef name="xmlbean" classname="org.apache.xmlbeans.impl.tool.XMLBean" classpath="../CommonLibs/lib/xbean_orig.jar" />
	<!-- Please do not run this unless you really know what you're doing -->
	<target name="generateConfigXMLBeans" unless="ConfigBeansUpToDate">
		<echo message="Compiling the config schema..." />
		<xmlbean schema="src/org/woped/config/configuration.xsd" destfile="lib/confBeans.jar" debug="on" classpath="../CommonLibs/lib/xbean_orig.jar" />
	</target>
	<uptodate property="ConfigBeansUpToDate" srcfile="src/org/woped/config/configuration.xsd" targetfile="lib/confBeans.jar"/>
	
	<target name="clean">
		<delete dir="bin/org" />
	</target>

</project>
