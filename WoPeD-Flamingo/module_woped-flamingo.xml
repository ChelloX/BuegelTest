<?xml version="1.0" encoding="UTF-8"?>
<project name="module_woped-flamingo" default="compile.module.woped-flamingo">
  <dirname property="module.woped-flamingo.basedir" file="${ant.file.module_woped-flamingo}"/>
  
  <property name="module.jdk.home.woped-flamingo" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.woped-flamingo" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.woped-flamingo" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.woped-flamingo" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="woped-flamingo.output.dir" value="${module.woped-flamingo.basedir}/../out/production/WoPeD-Flamingo"/>
  <property name="woped-flamingo.testoutput.dir" value="${module.woped-flamingo.basedir}/../out/test/WoPeD-Flamingo"/>
  
  <path id="woped-flamingo.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="woped-flamingo.module.production.classpath">
    <path refid="${module.jdk.classpath.woped-flamingo}"/>
    <path refid="library.tools.classpath"/>
    <path refid="library.xalan-j-2.7.1.classpath"/>
    <path refid="library.lib5.classpath"/>
    <path refid="library.lib4.classpath"/>
    <path refid="library.lib2.classpath"/>
    <path refid="library.jaxen-1.1.2.classpath"/>
    <path refid="library.xml-apis-2.0.2.classpath"/>
  </path>
  
  <path id="woped-flamingo.runtime.production.module.classpath">
    <pathelement location="${woped-flamingo.output.dir}"/>
    <path refid="library.tools.classpath"/>
    <path refid="library.xalan-j-2.7.1.classpath"/>
    <path refid="library.lib5.classpath"/>
    <path refid="library.lib4.classpath"/>
    <path refid="library.lib2.classpath"/>
    <path refid="library.jaxen-1.1.2.classpath"/>
    <path refid="library.xml-apis-2.0.2.classpath"/>
  </path>
  
  <path id="woped-flamingo.module.classpath">
    <path refid="${module.jdk.classpath.woped-flamingo}"/>
    <pathelement location="${woped-flamingo.output.dir}"/>
    <path refid="library.tools.classpath"/>
    <path refid="library.xalan-j-2.7.1.classpath"/>
    <path refid="library.lib5.classpath"/>
    <path refid="library.lib4.classpath"/>
    <path refid="library.lib2.classpath"/>
    <path refid="library.jaxen-1.1.2.classpath"/>
    <path refid="library.xml-apis-2.0.2.classpath"/>
  </path>
  
  <path id="woped-flamingo.runtime.module.classpath">
    <pathelement location="${woped-flamingo.testoutput.dir}"/>
    <pathelement location="${woped-flamingo.output.dir}"/>
    <path refid="library.tools.classpath"/>
    <path refid="library.xalan-j-2.7.1.classpath"/>
    <path refid="library.lib5.classpath"/>
    <path refid="library.lib4.classpath"/>
    <path refid="library.lib2.classpath"/>
    <path refid="library.jaxen-1.1.2.classpath"/>
    <path refid="library.xml-apis-2.0.2.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.woped-flamingo">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.woped-flamingo">
    <patternset refid="excluded.from.module.woped-flamingo"/>
  </patternset>
  
  <path id="woped-flamingo.module.sourcepath">
    <dirset dir="${module.woped-flamingo.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.woped-flamingo" depends="compile.module.woped-flamingo.production,compile.module.woped-flamingo.tests" description="Compile module WoPeD-Flamingo"/>
  
  <target name="compile.module.woped-flamingo.production" depends="register.custom.compilers" description="Compile module WoPeD-Flamingo; production classes">
    <mkdir dir="${woped-flamingo.output.dir}"/>
    <javac2 destdir="${woped-flamingo.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.woped-flamingo}/javac">
      <compilerarg line="${compiler.args.woped-flamingo}"/>
      <bootclasspath refid="woped-flamingo.module.bootclasspath"/>
      <classpath refid="woped-flamingo.module.production.classpath"/>
      <src refid="woped-flamingo.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.woped-flamingo"/>
    </javac2>
    
    <copy todir="${woped-flamingo.output.dir}">
      <fileset dir="${module.woped-flamingo.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.woped-flamingo.tests" depends="register.custom.compilers,compile.module.woped-flamingo.production" description="compile module WoPeD-Flamingo; test classes" unless="skip.tests"/>
  
  <target name="clean.module.woped-flamingo" description="cleanup module">
    <delete dir="${woped-flamingo.output.dir}"/>
    <delete dir="${woped-flamingo.testoutput.dir}"/>
  </target>
</project>